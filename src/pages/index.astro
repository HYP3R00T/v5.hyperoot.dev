---
import { Icon } from "astro-icon/components";

import Button from "@/components/ui/Button.astro";
import CoreLayout from "@/layouts/CoreLayout.astro";
import Hero from "@/components/home/Hero.astro";
import { Image } from "astro:assets";
import Logo from "@/assets/images/Logo.png";
import About from "@/components/home/about.mdx";
import Social from "@/components/home/Social.astro";
---

<CoreLayout>
  <div class="flex flex-col max-w-3xl z-10 w-full px-4 lg:px-0">
    <div
      class="flex flex-col gap-6 items-center bg-background-surface/50 rounded-radius"
    >
      <Hero />
      <Social />
    </div>
    <div class="flex flex-col items-start mt-12">
      <About />
    </div>
    <div class="flex flex-col w-full items-center my-12">
      <h2 class="text-center text-text-secondary border-b-0">
        Sign Up For My Free Newsletter
      </h2>
      <iframe
        src="https://hyperoot.substack.com/embed"
        width="100%"
        height="320"
        loading="lazy"
      >
      </iframe>
    </div>
  </div>
</CoreLayout>
