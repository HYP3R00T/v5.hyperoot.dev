---
import Project from "@/components/project/Project.astro";

import type { ProjectData } from "@/lib/types";
import CoreLayout from "./CoreLayout.astro";

const {
  title,
  description,
  altDescription,
  pubDatetime,
  modDatetime,
  tags,
  githubRepo,
  documentation,
  featured,
  draft,
  cover,
  coverAlt,
} = Astro.props as ProjectData;
---

<CoreLayout
  title={title}
  description={description}
  image={cover}
  imageAlt={coverAlt}
  contentType="project"
>
  <div class="z-10 w-full max-w-3xl px-4 lg:px-0">
    <Project
      title={title}
      description={description}
      altDescription={altDescription}
      pubDatetime={pubDatetime}
      modDatetime={modDatetime}
      tags={tags}
      githubRepo={githubRepo}
      documentation={documentation}
      featured={featured}
      draft={draft}
      cover={cover}
      coverAlt={coverAlt}
    >
      <slot />
    </Project>
  </div>
</CoreLayout>
