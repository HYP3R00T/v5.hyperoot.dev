---
import { Icon } from "astro-icon/components";
import Button from "@/components/ui/Button.astro";
const { currentPage, prevUrl, nextUrl, firstUrl, lastUrl, totalPages } =
  Astro.props;
---

<div class="flex flex-row gap-2 justify-center items-center">
  {
    prevUrl ? (
      <div class="items-center justify-center aspect-square cursor-pointer flex">
        <a href={prevUrl}>
          <Button variant="ghost" size="icon">
            <Icon
              name="arrow-up"
              class="w-[1.2rem] h-[1.2rem] transition-transform duration-300 ease-in-out -rotate-90"
            />
          </Button>
        </a>
      </div>
    ) : (
      <div class="items-center justify-center aspect-square flex">
        <a>
          <Button variant="ghost" size="icon">
            <Icon
              name="arrow-up"
              class="w-[1.2rem] h-[1.2rem] transition-transform duration-300 ease-in-out -rotate-90 text-text_subtle"
            />
          </Button>
        </a>
      </div>
    )
  }
  <div class="flex items-center justify-center">
    <Button
      variant="link"
      disabled
      class="disabled:opacity-100! text-accent-blue"
    >
      {currentPage} / {totalPages}
    </Button>
  </div>
  {
    nextUrl ? (
      <div class="items-center justify-center aspect-square cursor-pointer flex">
        <a href={nextUrl}>
          <Button variant="ghost" size="icon">
            <Icon
              name="arrow-up"
              class="w-[1.2rem] h-[1.2rem] transition-transform duration-300 ease-in-out rotate-90"
            />
          </Button>
        </a>
      </div>
    ) : (
      <div class="items-center justify-center aspect-square flex">
        <a>
          <Button variant="ghost" size="icon">
            <Icon
              name="arrow-up"
              class="w-[1.2rem] h-[1.2rem] transition-transform duration-300 ease-in-out rotate-90 text-text_subtle"
            />
          </Button>
        </a>
      </div>
    )
  }
</div>
