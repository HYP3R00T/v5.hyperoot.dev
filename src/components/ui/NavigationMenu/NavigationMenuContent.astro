---
export interface Props {
  id: string;
}
const { id } = Astro.props;
---

<div
  id={id}
  class="absolute left-0 top-full mt-1.5 rounded-radius border border-border bg-background-base shadow transition-all duration-300 ease-in-out opacity-0 invisible translate-y-2 min-w-max flex flex-col p-2"
  data-menu-content
>
  <slot />
</div>
