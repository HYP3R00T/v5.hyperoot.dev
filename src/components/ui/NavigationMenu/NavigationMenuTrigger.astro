---
import Button from "../Button.astro";

export interface Props {
  id: string;
}
const { id } = Astro.props;
---

<Button
  variant="ghost"
  data-menu-trigger={id}
  aria-haspopup="true"
  aria-expanded="false"
>
  <slot />
  <svg
    class="ml-2 w-4 h-4 transition duration-300"
    viewBox="0 0 24 24"
    fill="none"
    stroke="currentColor"
    stroke-width="2"
    stroke-linecap="round"
    stroke-linejoin="round"
    aria-hidden="true"
  >
    <path d="M6 9l6 6 6-6"></path>
  </svg>
</Button>
