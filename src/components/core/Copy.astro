---
import { Icon } from "astro-icon/components";
import Button from "../ui/Button.astro";
---

<style is:global>
  @reference "@/styles/global.css";
  .code-buttons {
    position: relative;
    text-align: right;
    width: 100%;
    height: 0;
    margin: 0 !important;
    padding: 0;
  }

  /* .code-buttons button {
    position: relative;
