---
import { Image } from "astro:assets";
import Logo from "@/assets/images/Logo.png";
---

<div class="flex flex-col w-full items-center lg:items-start">
  <h1
    class="flex flex-col items-center lg:items-start text-4xl text-text-secondary font-mono uppercase w-full"
    id="name"
  >
    Rajesh Das
  </h1>
  <h4
    class="flex flex-col items-center lg:items-start bg-gradient-to-tl from-accent-primary to-accent-secondary bg-clip-text text-transparent mt-0! font-bold w-full"
  >
    DevOps Engineer
  </h4>
  <p class="text-text-muted text-lg">
    I am a self-taught developer who loves to build things for the web. I have
    been coding for 3 years now and I am always looking to learn new things. I
    am currently working on a few projects, but I am always open to new
    opportunities.
  </p>
</div>

<script>
  document.addEventListener("astro:page-load", () => {
    const name: any = document.getElementById("name");
    const whoami: any = document.getElementById("whoami");

    name.addEventListener("mouseover", () => {
      name.innerText = "Hyperoot";
      name.dataset.value = "Hyperoot";
      const letters =
        "ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789abcdefghijklmnopqrstuvwxyz";
      let interval: any = null;
      let iteration = 0;
      clearInterval(interval);

      interval = setInterval(() => {
        name.innerText = name.innerText
          .split("")
          .map((letter: any, index: any) => {
            if (index < iteration) {
              return name.dataset.value[index];
            }

            return letters[Math.floor(Math.random() * 62)];
          })
          .join("");

        if (iteration >= name.dataset.value.length) {
          clearInterval(interval);
        }

        iteration += 1 / 3;
      }, 30);
    });

    name.addEventListener("mouseout", () => {
      name.innerText = "Rajesh Das";
      name.dataset.value = "Rajesh Das";
      const letters =
        "ABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789abcdefghijklmnopqrstuvwxyz";
      let interval: any = null;
      let iteration = 0;
      clearInterval(interval);

      interval = setInterval(() => {
        name.innerText = name.innerText
          .split("")
          .map((letter: any, index: any) => {
            if (index < iteration) {
              return name.dataset.value[index];
            }

            return letters[Math.floor(Math.random() * 62)];
          })
          .join("");

        if (iteration >= name.dataset.value.length) {
          clearInterval(interval);
        }

        iteration += 1 / 3;
      }, 30);
    });
  });
</script>
